<?xml version="1.0" encoding="UTF-8"?>

<flight_plan xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:noNamespaceSchemaLocation="flight_plan_a_partir_DTD.xsd"
             alt="100"
             ground_alt="0"
             lat0=" 48.184951"
             lon0="-4.296429"
             max_dist_from_home="5000"
             name="Basic"
             security_height="25">

  <header>
#include "subsystems/navigation/nav_line.h"
#include "subsystems/datalink/datalink.h"
</header>

  <waypoints>
    <waypoint name="HOME" x="0" y="0"/>
    <waypoint name="STDBY" x="-220.8" y="-69.0"/>
    <waypoint name="1" x="-1735.9" y="1414.7"/>
    <waypoint name="2" x="-281.8" y="-2473.0"/>
    <waypoint name="MOB" x="400.9" y="-1062.0"/>
    <waypoint name="S1" x="-1696.4" y="-2743.4"/>
    <waypoint name="S2" x="-2559.1" y="1103.6"/>
    <waypoint alt="215.0" name="AF" x="-94.6" y="202.1"/>
    <waypoint alt="185.0" name="TD" x="-13.0" y="33.8"/>
    <waypoint name="CLIMB" x="-114.5" y="162.3"/>
  </waypoints>

  <exceptions/>

  <blocks>

    <block name="Wait GPS">
      <set value="1" var="kill_throttle"/>
      <while cond="!GpsFixValid()"/>
    </block>

    <block group="home" 
    	     key="t" 
    	     name="Takeoff" 
    	     strip_button="Takeoff (wp CLIMB)" 
    	     strip_icon="takeoff.png">
      <exception cond="estimator_z &gt; ground_alt+25" deroute="Standby"/>
      <set value="0" var="kill_throttle"/>
      <set value="0" var="estimator_flight_time"/>
      <go from="HOME" pitch="15" throttle="1.0" vmode="throttle" wp="STDBY"/>
    </block>

    <block group="home" 
    	     key="&lt;Control&gt;a" 
    	     	name="Standby" 
    	     	strip_button="Standby" 
    	     	strip_icon="home.png">
      <circle radius="nav_radius" wp="STDBY"/>
    </block>

    <block group="base_pattern" 
    	     name="MOB" 
    	     strip_button="Turn around here" 
    	     strip_icon="mob.png">
      <call fun="NavSetWaypointHere(WP_MOB)"/>
      <set value="DEFAULT_CIRCLE_RADIUS" var="nav_radius"/>
      <circle radius="nav_radius" wp="MOB"/>
    </block>

    <block group="extra_pattern" 
    	     name="Line 1-2" 
    	     strip_button="Line (wp 1-2)" 
    	     strip_icon="line.png">
      <call fun="nav_line_init()"/>
      <call fun="nav_line(WP_1, WP_2, nav_radius)"/>
    </block>

    <block group="extra_pattern" 
    	     name="Survey S1-S2" 
    	     strip_button="Survey (wp S1-S2)" 
    	     strip_icon="survey.png">
      <survey_rectangle grid="150" orientation="WE" wp1="S1" wp2="S2"/>
    </block>

    <block name="circle 1">
      <circle radius="nav_radius" wp="1"/>
      <!-- <circle radius="1000" wp="1"/> -->
    </block>

    <block name="final">
      <go from="AF" hmode="route" vmode="glide" wp="TD"/>
    </block>

  </blocks>

</flight_plan>
